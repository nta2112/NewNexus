@model Nexus.Models.Product

@{
    Layout = "TechnicalSideBar";
}

<h2>Product Details</h2>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="Name" class="control-label">Name</label>
            <p class="form-control-static">@Model.Name</p>
        </div>
        <div class="form-group">
            <label for="Description" class="control-label">Description</label>
            <p class="form-control-static">@Model.Description</p>
        </div>
        <div class="form-group">
            <label for="Price" class="control-label">Price</label>
            <p class="form-control-static">@Model.Price</p>
        </div>
        <div class="form-group">
            <label for="Vendor" class="control-label">Vendor</label>
            <p class="form-control-static">@Model.Vendor.Name</p>
        </div>
        <div class="form-group">
            <label for="Quantity" class="control-label">Quantity</label>
            <p class="form-control-static">@Model.Quantity</p>
        </div>
        <div class="form-group">
            <label for="img" class="control-label">Image</label>
            <img src="@Model.img" alt="Product Image" class="img-fluid" />
        </div>
        <div class="form-group">
            <a href="@Url.Action("TbProduct", "Admin")" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>
