

@model Nexus.Models.Employee

@{
    Layout = "AdminSideBar";
}

<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/CreateEmployee.css" asp-append-version="true" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEmployee" asp-controller="Admin" method="post">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input name="Name" class="form-control" />
                <span class="text-danger">@ViewBag.NameError</span>
            </div>
            <div class="form-group">
                <label for="Email" class="control-label">Email</label>
                <input name="Email" class="form-control" />
                <span class="text-danger">@ViewBag.EmailError</span>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input name="Password" class="form-control" type="password" />
                <span class="text-danger">@ViewBag.PasswordError</span>
            </div>
            <div class="form-group">
                <label for="RoleId" class="control-label">Role</label>
                <select name="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                <span class="text-danger">@ViewBag.RoleIdError</span>
            </div>
            <div class="form-group">
                <label for="ShopId" class="control-label">Shop address</label>
                <select name="ShopId" class="form-control" asp-items="ViewBag.ShopId"></select>
                <span class="text-danger">@ViewBag.ShopIdError</span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
