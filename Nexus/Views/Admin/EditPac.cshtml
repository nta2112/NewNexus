@model Nexus.Models.ServicePackage

@{
    Layout = "AdminSideBar";
}

<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/CreateEmployee.css" asp-append-version="true" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPac" asp-controller="Admin" method="post">
            <input type="hidden" asp-for="PackageId" />
            <div class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Connection Type</label>
                <select asp-for="ConnectionTypeId" class="form-control" asp-items="ViewBag.ConnectionTypeId"></select>
                <span class="text-danger" asp-validation-for="ConnectionTypeId"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                <div>
                    <label>@Html.RadioButtonFor(model => model.status, true) Active</label>
                    <label>@Html.RadioButtonFor(model => model.status, false) Inactive</label>
                </div>
                <span class="text-danger" asp-validation-for="status"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>