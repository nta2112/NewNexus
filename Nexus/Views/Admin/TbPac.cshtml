@model List<ServicePackage>
<!-- CONTENT -->
<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
@{
    Layout = "AdminSideBar";
}


<div class="table-data">
    <div class="order">
        <div class="head">
            <h3>Service Package</h3>
            <p>
                <a asp-controller="Admin" asp-action="AddPac" class="create_btn">Create New</a>
            </p>

        </div>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>User name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
               
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PackageId</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@(item.status ? "active" : "inactive")</td>
                        <td>
                            <a class="edit_btn" asp-controller="Admin" asp-action="PacDetails" asp-route-id="@item.PackageId">Detail</a>
                            <a class="edit_btn" asp-controller="Admin" asp-action="EditPac" asp-route-id="@item.PackageId">Edit</a>
                            <form asp-controller="Admin" asp-action="DelPac" asp-route-id="@item.PackageId" method="post" class="inline-form" onsubmit="return confirm('Are you sure you want to revert the status to inactive? This will remove the package from the website.');">
                                <button type="submit" class="del_btn">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/js/script.js"></script>

