@model Nexus.Models.ServicePackage

@{
    Layout = "AdminSideBar";
}

<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/CreateEmployee.css" asp-append-version="true" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPac" asp-controller="Admin" method="post">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input name="Name" class="form-control" asp-for="Name" />
                <span class="text-danger">@ViewBag.NameError</span>
            </div>
            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <input name="Description" class="form-control" asp-for="Description" />
                <span class="text-danger">@ViewBag.DescriptionError</span>
            </div>
            <div class="form-group">
                <label for="Price" class="control-label">Price</label>
                <input name="Price" class="form-control" asp-for="Price" type="number" step="0.01" />
                <span class="text-danger">@ViewBag.PriceError</span>
            </div>
            <div class="form-group">
                <label for="ConnectionTypeId" class="control-label">Connection Type</label>
                <select name="ConnectionTypeId" class="form-control" asp-items="ViewBag.ConnectionTypeId"></select>
                <span class="text-danger">@ViewBag.ConnectionTypeIdError</span>
            </div>
            <div class="form-group">
                <label for="status" class="control-label">Status</label>
                <div>
                    <label>
                        <input type="radio" name="status" value="true" asp-for="status" /> Active
                    </label>
                    <label>
                        <input type="radio" name="status" value="false" asp-for="status" /> Inactive
                    </label>
                </div>
                <span class="text-danger">@ViewBag.StatusError</span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
